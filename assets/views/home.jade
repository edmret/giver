include components/header

main.main
  section.map-section
    h2
      span.ico
        <md-icon md-svg-src="images/radar.svg" cass="icon-title" aria-label="deliver" />
      | Someone needs your help, hug them with a supply!
    p here are the nearest collectors for you
    .map-wrap(ng-controller="MapController").
      <ng-map center="current-location" zoom="12" styles="[{stylers:[{hue:'#2C7597'},{visibility:'simplified'},{gamma:0.5},{weight:0.5}]},{elementType:'labels',stylers:[{visibility:'on'}]},{featureType:'water',stylers:[{color:'#61c6f4'}]}]">
        
      </ng-map>
  section.collaborate-section
    h2
      span.ico
        <md-icon md-svg-src="images/greentech.svg" cass="icon-title" aria-label="deliver"/> 
      | I'm part of logistics
    .custom-button-grid
      a.new-collaborator.md-button(href="#/collect/index")
        span.ico
          <md-icon md-svg-src="images/handshake.svg" cass="icon-title" aria-label="deliver" />
        | Collector!
      a.new-center.md-button(href="#/deliver/index")
        span.ico
          <md-icon md-svg-src="images/delivery.svg" cass="icon-title" aria-label="deliver" />
        | Deliver man
      a.new-center.md-button(href="#/center/index")
        span.ico
          <md-icon md-svg-src="images/product.svg" cass="icon-title" aria-label="deliver" />
        | Collector Center!
